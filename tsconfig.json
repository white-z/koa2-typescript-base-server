{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // 只能是CommonJS，请勿更改
    "strict": true,
    "importHelpers": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "sourceMap": false,
    "removeComments": true,
    "typeRoots" : ["./node_modules/@types", "./src/typings"],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "*.ts",
    "*/.d.ts",
    "package.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}